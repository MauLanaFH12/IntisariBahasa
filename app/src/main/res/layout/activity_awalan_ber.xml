    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awalan Ber-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Awalan ber- berfungsi sebagai pembentuk kata kerja. Makna awalan ber- adalah sebagai berikut:"/>
